@article{
title = {A Multi-perspective Examination of Export Promotion Programs: The Case of PEIEx by APEX-Brasil }
,author = {Dornelas, B. F. and  Carneiro, J. M. T.}
,journal = {Revista Ibero-Americana de Estratégia}
,year = {2018}
